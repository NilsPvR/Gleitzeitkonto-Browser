{
  "name": "Gleitzeitkonto-Browser",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "startTestserver": "node main.js",
    "startWebserverGleitzeitkonto:": "node ./Webserver/main.js",
    "publish": "node publishExtension.js && npm run combineJS && npm run compressJS && npm run sass-prod",
    "combineJS": "browserify Extension/Gleitzeitkonto-Browser.js -p esmify > compressed/Extension/Gleitzeitkonto-Browser.js",
    "compressJS": "terser compressed/Extension/Gleitzeitkonto-Browser.js -c --comments -o compressed/Extension/Gleitzeitkonto-Browser.js && terser Extension/Popup/popup-script.js -c -m --comments -o compressed/Extension/Popup/popup-script.js",
    "sass-dev": "sass --watch --update --no-source-map --style=expanded Extension/Popup/Gleitzeitkonto-Browser.scss:Extension/Popup/Gleitzeitkonto-Browser.css",
    "sass-prod": "sass --no-source-map --style=compressed Extension/Popup/Gleitzeitkonto-Browser.scss:Compressed/Extension/Popup/Gleitzeitkonto-Browser.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NilsPvR/Gleitzeitkonto-Browser.git"
  },
  "author": "NilsPvR",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NilsPvR/Gleitzeitkonto-Browser/issues"
  },
  "homepage": "https://github.com/NilsPvR/Gleitzeitkonto-Browser#readme",
  "devDependencies": {
    "browserify": "^17.0.0",
    "esmify": "^2.1.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.0",
    "line-reader": "^0.4.0",
    "puppeteer": "^19.3.0",
    "puppeteer-extra": "^3.3.4",
    "puppeteer-extra-plugin-user-preferences": "^2.4.0",
    "sass": "^1.56.1",
    "terser": "^5.15.0"
  }
}
