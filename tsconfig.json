{
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2023",
    "module": "preserve",
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "watchOptions": {
    "excludeDirectories": ["node_modules"]
  }
}
