{

    "manifest_version": 2,
    "name": "Fiori-Stunden",
    "version": "0.1",
  
    "description": "Browser Erweiterung, welche erlaubt die Ãœberstunden direkt in der Fiori-Zeiterfassung einzusehen ",
    "homepage_url": "https://github.com/NilsPvR/fiori-stunden",
  
    "icons": {
      "48": "Assets/Experiments48.png",
      "96": "Assets/Experiments96.png",
      "128": "Assets/Experiments128.png"      
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.ondemand.com/*", "*://bgp.btcsap.btc-ag.com/*"],
        "js": ["fiori-stunden.js"]

      }
    ],

    "web_accessible_resources": [
      "fiori-stunden-func.js"
   ],

    "permissions": [
      "*://localhost/*"
    ],

    "browser_action": {
      "default_icon": {
        "48": "Assets/Experiments48.png",
        "96": "Assets/Experiments96.png",
        "128": "Assets/Experiments128.png"
      },
      "default_title": "Fiori-Stunden",
      "default_popup": "Popup/fiori-stunden.html",
      "browser_style": true,
      "chrome_style": true
    }
  
  }
  